{
  "name": "shiftleft-scan",
  "displayName": "ShiftLeft Scan",
  "description": "ShiftLeft Scan is a free open-source security tool for modern DevOps teams",
  "author": "ShiftLeft Inc",
  "license": "GPL-3.0-or-later",
  "version": "1.1.5",
  "publisher": "ShiftLeftSecurity",
  "homepage": "https://shiftleft.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShiftLeftSecurity/shiftleft-scan-vscode.git"
  },
  "bugs": {
    "url": "https://discuss.shiftleft.io"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#5140e6",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sarif",
    "shiftleft scan",
    "SAST scan",
    "Dependency scan",
    "License scan"
  ],
  "engines": {
    "vscode": "^1.41.0"
  },
  "activationEvents": [
    "onLanguage:json",
    "onCommand:extension.shiftleft.LaunchExplorer",
    "onCommand:extension.shiftleft.PerformScan",
    "workspaceContains:**/*.sarif"
  ],
  "main": "./out/extension",
  "contributes": {
    "menus": {
      "touchBar": [
        {
          "command": "extension.shiftleft.PerformScan",
          "when": "!inDebugMode",
          "group": "ShiftLeft@1"
        },
        {
          "command": "extension.shiftleft.LaunchExplorer",
          "when": "!inDebugMode",
          "group": "ShiftLeft@2"
        }
      ]
    },
    "configuration": {
      "title": "ShiftLeft Scan",
      "properties": {
        "shiftleft-scan.containerImage": {
          "type": "string",
          "default": "shiftleft/scan:latest",
          "description": "Scan container image to use. Leave as default.",
          "enum": [
            "shiftleft/scan:latest",
            "shiftleft/scan-java:latest",
            "shiftleft/scan-csharp:latest",
            "shiftleft/scan-oss:latest"
          ]
        },
        "shiftleft-scan.appName": {
          "type": "string",
          "default": "",
          "description": "Application name. Override while performing ShiftLeft Insepct cloud based scans."
        },
        "shiftleft-scan.appRoot": {
          "type": "string",
          "default": "",
          "description": "Application root. Set this when using a monorepo with multiple applications."
        },
        "shiftleft-scan.orgId": {
          "type": "string",
          "default": "",
          "description": "ShiftLeft NG SAST organization id for cloud based scans. Visit https://www.shiftleft.io/register to signup."
        },
        "shiftleft-scan.orgToken": {
          "type": "string",
          "default": "",
          "description": "ShiftLeft NG SAST organization token (aka Public API Token) for cloud based scans. Visit https://www.shiftleft.io/register to signup."
        },
        "shiftleft-scan.accessToken": {
          "type": "string",
          "default": "",
          "description": "ShiftLeft NG SAST access token for cloud based scans. Visit https://www.shiftleft.io/register to signup."
        },
        "shiftleft-scan.disableTelemetry": {
          "type": "boolean",
          "default": false,
          "description": "Disable scan telemetry. Telemetry is used for diagnostics and feature prioritization purposes."
        },
        "shiftleft-scan.scanMode": {
          "type": "string",
          "default": "ide",
          "description": "Scan mode. Useful for troubleshooting purposes.",
          "enum": [
            "ide",
            "ci",
            "pr",
            "release",
            "deploy"
          ]
        },
        "shiftleft-scan.rootpaths": {
          "type": "array",
          "default": [
            "~/work",
            "~/go"
          ],
          "description": "Add root paths for default mapping of locations in the sarif file that can't be found (ex. the local root directory of your repo)"
        },
        "shiftleft-scan.resultsListHideColumns": {
          "default": [
            "baselineState",
            "rank",
            "logicalLocation",
            "resultStartPos"
          ],
          "description": "The list of columns to hide from the results list.",
          "type": "array",
          "items": {
            "enum": [
              "baselineState",
              "message",
              "rank",
              "resultFile",
              "resultStartPos",
              "logicalLocation",
              "ruleId",
              "ruleName",
              "runId",
              "severityLevel"
            ]
          }
        },
        "shiftleft-scan.resultsListGroupBy": {
          "default": "resultFile",
          "description": "The column to group the results list by.",
          "type": "string",
          "enum": [
            "kind",
            "message",
            "resultFile",
            "resultStartPos",
            "logicalLocation",
            "ruleId",
            "ruleName",
            "severityLevel"
          ]
        },
        "shiftleft-scan.resultsListSortBy": {
          "default": {
            "column": "severityLevel",
            "ascending": false
          },
          "description": "The column to sort the results list by(per group) and the order.",
          "type": "object",
          "properties": {
            "column": {
              "type": "string",
              "enum": [
                "baseLineState",
                "message",
                "resultFile",
                "resultStartPos",
                "ruleId",
                "ruleName",
                "severityLevel"
              ]
            },
            "ascending": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".sarif"
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.shiftleft.PerformScan",
        "title": "Security Scan",
        "category": "ShiftLeft",
        "icon": {
          "light": "./menu-logo.svg",
          "dark": "./menu-logo.svg"
        }
      },
      {
        "command": "extension.shiftleft.LaunchExplorer",
        "title": "View Results",
        "category": "ShiftLeft",
        "icon": {
          "light": "./logo.svg",
          "dark": "./logo.svg"
        }
      },
      {
        "command": "extension.shiftleft.nextCodeFlowStep",
        "title": "Next Code Flow step",
        "category": "ShiftLeft"
      },
      {
        "command": "extension.shiftleft.previousCodeFlowStep",
        "title": "Previous Code Flow step",
        "category": "ShiftLeft"
      }
    ],
    "keybindings": [
      {
        "command": "extension.shiftleft.nextCodeFlowStep",
        "key": "f6",
        "when": "!inDebugMode"
      },
      {
        "command": "extension.shiftleft.previousCodeFlowStep",
        "key": "shift+f6",
        "when": "!inDebugMode"
      },
      {
        "command": "extension.shiftleft.LaunchExplorer",
        "key": "Ctrl+l Ctrl+e",
        "mac": "cmd+l cmd+e"
      },
      {
        "command": "extension.shiftleft.PerformScan",
        "key": "Ctrl+l Ctrl+p",
        "mac": "cmd+l cmd+p",
        "when": "!inDebugMode"
      }
    ]
  },
  "scripts": {
    "buildExplorer": "tsc --b tsconfig.explorer.json",
    "buildExplorerWatch": "tsc --b tsconfig.explorer.json -watch",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "tslint --project ./ -t verbose",
    "installNodeModules": "npm install",
    "package": "npx vsce package -o dist"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jquery": "^3.3.30",
    "@types/mocha": "^7.0.2",
    "@types/node": "^7.10.7",
    "@types/sarif": "^2.1.2",
    "@types/vscode": "^1.41.0",
    "@types/markdown-it": "0.0.9",
    "mocha": "^6.2.0",
    "tslint": "^5.18.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.0.2",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-no-unused-expression-chai": "^0.1.4"
  },
  "dependencies": {
    "json-source-map": "^0.4.0",
    "jsonpointer": "4.0.1",
    "markdown-it": "^9.0.1",
    "systemjs": "^6.2.6",
    "requirejs": "^2.3.6"
  }
}
